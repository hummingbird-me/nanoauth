{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist/es",
    "moduleResolution": "node",
    "module": "ESNext",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./custom_typings"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
